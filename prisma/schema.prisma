datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  IN_PROGRESS
  DONE
}

model User {
  id    String @id @default(cuid())
  email String @unique
  role  Role   @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?
  notes    Note[]
  reports  Report[]
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Playground {
  id          String   @id @unique @default(cuid())
  name        String
  name2       String
  size        String
  type        String
  description String
  area        String
  ball        String
  skater      String
  streetball  String
  latitude    String
  longitude   String
  reports     Report[]
}

model Note {
  id    String @id @default(cuid())
  title String
  body  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}

model Report {
  id           String     @id @default(cuid())
  title        String
  description  String
  playground   Playground @relation(fields: [playgroundId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  playgroundId String

  status    Status   @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
}
